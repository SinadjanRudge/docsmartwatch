<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context="com.triadss.doctrack2.Home_VitalMonitor">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ScrollView
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/heartRateValue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Loading"
                    android:textAlignment="center"
                    android:textColor="#D1D1D1"
                    android:textSize="20sp"

                    android:padding="10dp" />

                <TextView
                    android:id="@+id/unavailableVitalsText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Unavailable Vital Signs"
                    android:textAlignment="center"
                    android:textColor="#D1D1D1"
                    android:textSize="15sp"
                    android:padding="10dp"
                    />

<!--                <TextView-->
<!--                    android:id="@+id/pairMobileDevice"-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:text="Please Pair it with Mobile Device"-->
<!--                    android:textAlignment="center"-->
<!--                    android:textColor="#D1D1D1"-->
<!--                    android:textSize="18sp"-->
<!--                    android:padding="10dp" />-->


                <LinearLayout
                    android:id="@+id/vitalsContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:orientation="vertical">

                    <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:paddingHorizontal="2dp"
                        android:stretchColumns="1">

                        <TableRow>
                            <TextView
                                android:padding="3dip"
                                android:text="Blood Pressure"
                                android:textColor="#E4E3E3" />

                            <TextView
                                android:id="@+id/bpVal"
                                android:gravity="right"
                                android:padding="3dip"
                                android:text="0/0"
                                android:textColor="#E4E3E3" />

                            <TextView
                                android:gravity="right"
                                android:padding="3dip"
                                android:text="mm Hg"
                                android:textColor="#E4E3E3" />
                        </TableRow>

                        <TableRow>

                            <TextView
                                android:padding="3dip"
                                android:text="Temperature"
                                android:textColor="#E4E3E3" />

                            <TextView
                                android:id="@+id/tempVal"
                                android:gravity="right"
                                android:padding="3dip"
                                android:text="0"
                                android:textColor="#E4E3E3" />

                            <TextView
                                android:gravity="right"
                                android:padding="3dip"
                                android:text="&#176;C"
                                android:textColor="#E4E3E3" />
                        </TableRow>

                        <TableRow>

                            <TextView
                                android:padding="3dip"
                                android:text="Pulse Rate"
                                android:textColor="#E4E3E3" />

                            <TextView
                                android:id="@+id/pRateVal"
                                android:gravity="right"
                                android:padding="3dip"
                                android:text="0"
                                android:textColor="#E4E3E3" />

                            <TextView
                                android:gravity="right"
                                android:padding="3dip"
                                android:text="bpm"
                                android:textColor="#E4E3E3" />
                        </TableRow>

                        <TableRow>

                            <TextView
                                android:padding="3dip"
                                android:text="Oxygen Level"
                                android:textColor="#E4E3E3" />

                            <TextView
                                android:id="@+id/oxygenVal"
                                android:gravity="right"
                                android:padding="3dip"
                                android:text="0"
                                android:textColor="#E4E3E3" />

                            <TextView
                                android:gravity="right"
                                android:padding="3dip"
                                android:text="mm Hg"
                                android:textColor="#E4E3E3" />
                        </TableRow>

                        <TableRow>

                            <TextView
                                android:padding="3dip"
                                android:text="Weight"
                                android:textColor="#E4E3E3" />

                            <TextView
                                android:id="@+id/weightVal"
                                android:gravity="right"
                                android:padding="3dip"
                                android:text="0"
                                android:textColor="#E4E3E3" />

                            <TextView
                                android:gravity="right"
                                android:padding="3dip"
                                android:text="kg"
                                android:textColor="#E4E3E3" />
                        </TableRow>

                        <TableRow>

                            <TextView
                                android:padding="3dip"
                                android:text="Height"
                                android:textColor="#E4E3E3" />

                            <TextView
                                android:id="@+id/heightVal"
                                android:gravity="right"
                                android:padding="3dip"
                                android:text="0"
                                android:textColor="#E4E3E3" />

                            <TextView
                                android:gravity="right"
                                android:padding="3dip"
                                android:text="cm"
                                android:textColor="#E4E3E3" />
                        </TableRow>

                        <TableRow>

                            <TextView
                                android:padding="3dip"
                                android:text="BMI"
                                android:textColor="#EDEDED" />

                            <TextView
                                android:id="@+id/bmiVal"
                                android:gravity="right"
                                android:padding="3dip"
                                android:text="0"
                                android:textColor="#EDEDED" />
                        </TableRow>


                    </TableLayout>
                    <TextView
                        android:id="@+id/lastSyncText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Last Sync: "
                        android:textColor="#FFFFFF"
                        android:textSize="10sp"
                        android:padding="10dp" />
                </LinearLayout>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="50dp" />

            </LinearLayout>
        </ScrollView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
