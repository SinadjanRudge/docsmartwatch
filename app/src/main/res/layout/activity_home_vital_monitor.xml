<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".Home_VitalMonitor">

    <!--        app:layout_constraintLeft_toRightOf="@+id/heartRateLabel"--><![CDATA[
         />

    ]]><!--        app:layout_constraintLeft_toRightOf="@+id/heartRateValue"--><![CDATA[
         />

    ]]>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/loadingText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Loading"
            android:textAlignment="center"
            android:textColor="#D1D1D1"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/unavailabileHeartRateText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Unavailable"
            android:textAlignment="center"
            android:textColor="#D1D1D1"
            android:textSize="20sp"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/vitalsContainer"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:id="@+id/heartRateLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:layout_weight="1.3"
                android:text="Heart Rate"
                android:textColor="#D1D1D1"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/heartRateValue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2.3"
                android:text="130"
                android:textAlignment="textEnd"
                android:textColor="#D1D1D1"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/heartRateUnits"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="0dp"
                android:layout_weight="2.2"
                android:text="bpm"
                android:textAlignment="textEnd"
                android:textColor="#D1D1D1"
                android:textSize="20sp" />
        </LinearLayout>

        <Button
            android:id="@+id/exitBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="40dp"
            android:layout_marginTop="24dp"
            android:text="Exit" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>